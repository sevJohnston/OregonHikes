@model IEnumerable<OregonHikes.Models.Person>
@{
    Layout = "_NewLayout";
    ViewData["Title"] = "Hiking Groups and Area Experts";
}


<body>
    <div class="panel-body">
        <h1>@ViewData["Title"]</h1>

        <table class="table table-sm table-responsive table-striped table-bordered">
            <thead>
                <tr>
                    <th>People and Hiking Groups</th>
                    <th>Links</th>
                    <th>Description</th>

                </tr>
            </thead>
            <tbody>
                @foreach (OregonHikes.Models.Person p in Model)
                {
                    <tr>
                        <td>@p.PeopleName</td>
                        <td><a href="@p.Link">@p.Link</a></td>
                        <td>@p.Description</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>


    
</body>

